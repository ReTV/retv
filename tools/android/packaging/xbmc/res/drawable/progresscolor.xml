<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient 
                android:startColor="#ff404042" 
                android:endColor="#ffadadad" 
                android:angle="270.0" 
                android:centerColor="#ff404042" 
            />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient 
                    android:startColor="#ff6d9927" 
                    android:endColor="#ffd7e9b6" 
                    android:angle="270.0" 
                    android:centerY="0.8" 
                    android:centerColor="#ffa0cb5c" 
                />
            </shape>
        </clip>
    </item>

</layer-list>
